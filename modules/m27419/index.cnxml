                            <m:mrow>
                              <m:mi>Q</m:mi>
                            </m:mrow>
                          </m:mstyle>
                        </m:msub>
                        <m:mo stretchy="false">−</m:mo>
                        <m:msub>
                          <m:mi>L</m:mi>
                          <m:mstyle fontsize="8pt">
                            <m:mrow>
                              <m:mi>s</m:mi>
                            </m:mrow>
                          </m:mstyle>
                        </m:msub>
                      </m:mrow>
                      <m:msub>
                        <m:mi>i</m:mi>
                        <m:mstyle fontsize="8pt">
                          <m:mrow>
                            <m:mi>Q</m:mi>
                          </m:mrow>
                        </m:mstyle>
                      </m:msub>
                      <m:msub>
                        <m:mi>i</m:mi>
                        <m:mstyle fontsize="8pt">
